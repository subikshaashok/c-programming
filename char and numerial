#include <stdio.h>
main(){
// Create variables
int myNum = 5;             // Integer (whole number) 2 bytes
float myFloatNum = 5.99;   // Floating point number 4 bytes
double myDoubleNum = 83.9999999; // decimal 8 bytes
char myLetter = 'D';       // Character 1 bytes

// Print variables
printf("%d\n", myNum); //or %i
printf("%f\n", myFloatNum); // or %F
printf("%lf\n", myDoubleNum); //longfloat
printf("%c\n", myLetter);
return 0;
}
// output: 5,6.0,84.0,D

//char will store only one letter ,for multi letter 
#include <stdio.h>
main(){
// Create variables
char myLetter[] = "Data"; // variable[] and "" use double quotes   
printf("%s\n", myLetter);
return 0;
}
//output:Data

//numerial 
#include <stdio.h>
main(){
// Create variables
float myFloatNum = 3.5;

printf("%f\n", myFloatNum);   // Default will show 6 digits after the decimal point
printf("%.1f\n", myFloatNum); // Only show 1 digit
printf("%.2f\n", myFloatNum); // Only show 2 digits
printf("%.4f", myFloatNum);   // Only show 4 digits;
return 0;
}

//output:3.500000,3.5,3.50,3.5000


