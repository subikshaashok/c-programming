/* do {
  // code block to be executed
}
while (condition); */
#include <stdio.h>

int main() {
  int i = 0;
  
  do {
    printf("%d\n", i);
    i++;
  }
  while (i < 5);
  
  return 0;
}  // same like while loop


#include <stdio.h>

int main() {
  int countdown = 3;

  while (countdown > 0) {
    printf("%d\n", countdown);
    countdown--;
  }

  printf("Happy New Year!!\n");

  return 0;
}

// ex
#include <stdio.h>

int main() {
  int i = 0;
  while (i <= 10) {
    printf("%d\n", i);
    i += 2;
  }
    
  return 0;
}
