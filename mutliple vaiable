#include <stdio.h>
main() {
int x=5;
int y=10;
int sum=x+y;
printf("%d",sum);
return 0;
}
//output=15

//declare multiple variables
#include <stdio.h>
#include  <math.h>
main(){
int x=2, y=4,z=2;
printf("%d", x+y+z);
return 0;
}  //output 8

//You can also assign the same value to multiple variables of the same type:
#include <stdio.h>
#include <math.h>
main() {
int x,y,z;
x=y=z=50;
printf("%d",x+y+z);
return 0;
}
