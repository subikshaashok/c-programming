// Instead of writing many if..else statements, you can use the switch statement.
/* switch (expression) {
case x: like if
statement;
break;
case 2:  like else if
statement;
break;
default: like else
statement;
} */

// ex
#include <stdio.h>
int main() {
int day = 1;
switch(day){
case 1:
printf("monday");
break;
case 2:
printf ("tuesday");
break;
case 3:
printf("wednesday");
break;
case 4:
printf("thrusday");
break;
case 5:
printf("friday");
break;
case 6:
printf("saturday");
break;
default:
printf("sunday");
break;
}
return 0;
}





